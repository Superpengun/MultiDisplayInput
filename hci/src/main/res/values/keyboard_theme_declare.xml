<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HciKeyboardViewTheme">
        <!--   keyboardView   -->
        <attr name="android:background" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingBottom" />

        <!-- Image for the key. This image needs to be a StateListDrawable, with the following
             possible states: normal, pressed, checkable, checkable+pressed, checkable+checked,
             checkable+checked+pressed. -->
        <attr name="keyBackground" format="reference" />

        <!-- Size of the text for character keys. -->
        <attr name="keyTextSize" format="reference|dimension" />

        <!-- Size of the text for custom keys with some text and no icon. -->
        <attr name="labelTextSize" format="reference|dimension" />

        <!-- Color to use for the label in a key. -->
        <attr name="keyTextColor" format="reference|color" />
        <attr name="funKeyTextColor" format="reference|color"/>

        <attr name="keyHorizontalGap" format="reference|dimension" />
        <attr name="keyVerticalGap" format="reference|dimension" />

        <attr name="keyTextCaseStyle">
            <flag name="auto" value="0" />
            <flag name="lowercase" value="1" />
            <flag name="uppercase" value="2" />
        </attr>

        <!--        <attr name="keyLabelIconAlign">-->
        <!--            &lt;!&ndash; against left or right edge of key &ndash;&gt;-->
        <!--            <flag name="left" value="3" />-->
        <!--            <flag name="right" value="5" />-->
        <!--            &lt;!&ndash; horizontally centered at center of key (adjusted only for key padding) &ndash;&gt;-->
        <!--            <flag name="center" value="17" />-->
        <!--            &lt;!&ndash; centered, but also adjust position to account for hint label location &ndash;&gt;-->
        <!--            <flag name="auto" value="7" />-->
        <!--        </attr>-->

        <attr name="keyboardNameTextSize" format="reference|dimension" />
        <attr name="keyboardNameTextColor" format="reference|color" />
        <!-- Default KeyboardView style. -->
        <attr name="keyboardViewStyle" format="reference" />
        <!-- Background image for the functional key. This image needs to be a
            {@link android.graphics.drawable.StateListDrawable}, with the following possible
            states: normal, pressed. -->
        <attr name="functionalKeyBackground" format="reference" />
        <!-- Layout resource for key press feedback.-->
        <attr name="keyPreviewLayout" format="reference" />
        <!-- Vertical offset of the key press feedback from the key. -->
        <attr name="keyPreviewOffset" format="dimension" />
        <!-- Height of the key press feedback popup. -->
        <attr name="keyPreviewHeight" format="dimension" />
        <!-- Amount to offset the touch Y coordinate by, for bias correction. -->
        <attr name="verticalCorrection" format="dimension" />
        <!-- Layout resource for popup keyboards. -->
        <attr name="popupLayout" format="reference" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="key_preview_text_color" format="reference|color"/>
        <attr name="key_preview_bg" format="reference"/>
        <attr name="keyboardKeyHeight" format="reference|dimension"/>

        <!--   MiniKeyboardView     -->
        <attr name="key_pop_width" format="reference|dimension" />
        <attr name="key_pop_height" format="reference|dimension" />
        <attr name="key_pop_font_size" format="reference|dimension" />
        <attr name="key_pop_margin" format="reference|dimension" />
        <attr name="key_text_color" format="reference|dimension" />

        <!--   候选区     -->
        <attr name="candidateBgColor" format="reference|color" />
        <attr name="candidateTextColor" format="reference|color" />
        <attr name="candidateSelectedTextColor" format="reference|color" />
        <attr name="candidateFontSize" format="reference|dimension" />
        <attr name="candidateDataXGap" format="reference|dimension" />
        <attr name="candidateVerticalTextPadding" format="reference|dimension" />
        <attr name="moreCandidateFontSize" format="reference|dimension" />

        <!--   StrokeView     -->
        <attr name="paintWidth" format="reference|float" />
        <attr name="strokeColor" format="reference|color" />
        <attr name="strokeViewBg" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="HciKeyboardFunctionIconTheme">
        <!-- should support normal, android:state_pressed, key_type_feedback, android:state_pressed+key_type_feedback, android:state_checked, state_checked+key_type_feedback -->
        <attr name="iconKeyShift" format="reference" />
        <!-- should support normal, android:state_pressed, key_type_feedback, android:state_pressed+key_type_feedback, android:state_checked, state_checked+key_type_feedback -->
        <attr name="iconKeyControl" format="reference" />
        <!-- should support normal, key_type_feedback -->
        <attr name="iconKeyBackspace" format="reference" />
        <!-- should support normal, key_type_feedback -->
        <attr name="iconKeySpace" format="reference" />
        <!-- should support normal, key_type_feedback, action_done, action_done+key_type_feedback, action_search, action_search+key_type_feedback, action_go, action_go+key_type_feedback  -->
        <attr name="iconKeyAction" format="reference" />
        <!-- should support normal, key_type_feedback -->
        <attr name="iconKeyLanguage" format="reference" />

        <!--    MiniKeyboardView    -->
        <attr name="key_pop_bg" format="reference" />

        <!--   候选区     -->
        <attr name="candidateMoreRightIcon" format="reference" />
        <attr name="candidateMoreLeftIcon" format="reference" />
        <attr name="candidateCloseIcon" format="reference" />
        <attr name="candidateClearIcon" format="reference" />
        <attr name="candidateHWIcon" format="reference" />
        <attr name="candidateKeyboardIcon" format="reference" />
        <attr name="moreCandidatePrePageIcon" format="reference" />
        <attr name="moreCandidateNextPageIcon" format="reference" />
        <attr name="moreCandidateBackIcon" format="reference" />
    </declare-styleable>
</resources>
