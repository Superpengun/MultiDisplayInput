<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HciInternationalInputmethod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseKeyboardTheme">
        <item name="android:background">@color/black</item>
        <item name="keyBackground">@drawable/btn_key</item>

        <item name="keyTextSize">@dimen/key_text_size</item>
        <item name="keyTextColor">@color/white</item>
        <item name="labelTextSize">@dimen/key_text_size</item>
        <item name="funKeyTextColor">@color/white</item>

        <item name="keyboardNameTextSize">@dimen/key_text_size</item>
        <item name="keyboardNameTextColor">#FAAA</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="keyHorizontalGap">5dp</item>
        <item name="keyVerticalGap">1dp</item>
        <item name="keyTextCaseStyle">auto</item>
        <item name="key_preview_text_color">@color/white</item>
        <item name="key_preview_bg">@drawable/key_float</item>
        <item name="keyPreviewHeight">@dimen/key_preview_height</item>
        <item name="keyPreviewLayout">@layout/key_preview</item>
        <item name="functionalKeyBackground">@drawable/keyboard_function_key</item>
        <item name="popupLayout">@layout/pop_keyboard</item>
        <item name="keyboardKeyHeight">@dimen/keyboard_key_height</item>

        <!--   MiniKeyboardView     -->
        <item name="key_pop_width">@dimen/key_pop_width</item>
        <item name="key_pop_height">@dimen/key_pop_height</item>
        <item name="key_pop_font_size">@dimen/key_pop_font_size</item>
        <item name="key_pop_margin">@dimen/key_pop_margin</item>
        <item name="key_text_color">@color/white</item>

        <!--    候选区    -->
        <item name="candidateBgColor">@color/baseCandidateBg</item>
        <item name="candidateTextColor">@color/baseCandidateText</item>
        <item name="candidateSelectedTextColor">@color/baseCandidateSelectedText</item>
        <item name="candidateFontSize">24dp</item>
        <item name="candidateDataXGap">48dp</item>
        <item name="candidateVerticalTextPadding">10dp</item>
        <item name="moreCandidateFontSize">24dp</item>
    </style>

    <style name="BaseIconTheme">
        <!-- should support normal, android:state_pressed, , android:state_pressed+, android:state_checked, state_checked+ -->
        <item name="iconKeyShift">@drawable/key_shift_set</item>
        <!-- should support normal,  -->
        <item name="iconKeyBackspace">@drawable/key_icon_delete</item>
        <!-- should support normal,  -->
        <item name="iconKeySpace">@drawable/key_icon_space</item>
        <!-- should support normal, key_type_, action_done, action_done+key_type_, action_search, action_search+key_type_, action_go, action_go+key_type_  -->
        <item name="iconKeyAction">@drawable/key_action_set</item>

        <!--   MiniKeyboardView     -->
        <item name="key_pop_bg">@drawable/key_pop_bg</item>

        <!--    候选区    -->
        <item name="candidateMoreRightIcon">@drawable/candidate_more</item>
        <item name="candidateMoreLeftIcon">@drawable/candidate_more_left</item>
        <item name="candidateCloseIcon">@drawable/candidate_close</item>
        <item name="candidateClearIcon">@drawable/candidate_clear</item>
        <item name="moreCandidatePrePageIcon">@drawable/symbol_pre_icon</item>
        <item name="moreCandidateNextPageIcon">@drawable/symbol_next_icon</item>
        <item name="moreCandidateBackIcon">@drawable/symbol_back_icon</item>
    </style>
</resources>